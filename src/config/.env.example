# Application Configuration
APP_NAME=AI Chat Tools
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000
HOST=localhost

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key
MODEL_NAME=gpt-3.5-turbo
OPENAI_EMBEDDINGS_MODEL=text-embedding-ada-002
OPENAI_BASE_URL=https://api.openai.com/v1
MAX_TOKENS=2000
TEMPERATURE=0.7

# RAG Configuration
RAG_ENABLED=true
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_DOCS=5
RAG_MIN_SCORE=0.7
RAG_STORAGE_TYPE=memory

# Database Configuration
DB_TYPE=sqlite
DB_PATH=:memory:
DB_URL=
DB_MAX_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=10000

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-at-least-32-chars-long
TOKEN_EXPIRATION=24h
SALT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE=true

# Cache Configuration
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
